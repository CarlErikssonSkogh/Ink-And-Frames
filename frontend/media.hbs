<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
    <script src="/socket.io/socket.io.js"></script>
    <script src="index.js"></script>
    <title>Document</title>
</head>
<body style="margin:0;display: flex; justify-content:flex-start; align-items:center; flex-direction:column; height:100vh; background-image: linear-gradient(darkgray, gray,rgb(58, 58, 58), black);">

<!--The header, contains title, Menu, Searchbar and Login/Registration-->
<header id = header>
    <div id ="title">
    <a id="titleText" href="/">Ink&Frames</a>
    </div>
        {{#if adminPermission}}
        <a href="admin" class="admin">Admin</a>
        {{/if}}
        <form id="search"action="/search" method="GET">
        <input id="searchbar" type="text" name="query" placeholder="Search movies...">
        <button type="submit"><i class="fas fa-search"></i></button>
    </form>

    <nav id="auth">
<ul>
  {{#if isAuthenticated}}
    <li><a href="">{{user.Username}}</a></li>
  {{else}}
    <li id="signIn"><a href="/signIn">Sign in</a></li>
    <li id="signUp"><a href="/signUp">Sign up</a></li>
  {{/if}}
</ul>
    </nav>
</header>

<div class="mediaItemCon">
    <div class="mediaItemInfo">
    <div class="mediaItemName">
        
        <h1>{{mediaItem.title}}</h1>
        <h2>{{mediaItem.tag}} - {{mediaItem.year}}</h2>
    </div>
    <div class="ratingCon">
        <h3>I&F RATING</h3>
        <h3><img src="star.png" alt=""><span id="AvgRatingText">{{mediaItem.avgRating}}</span>/10</h3>
    </div>
    <div class="ratingCon">
        {{#if rated}}
        <h3>YOUR RATING</h3>
        <div class="dropdown">
            <button onclick="dropdownFunction(event)" class="dropbtn"><img onclick="dropdownFunction(event)" src="star.png" alt=""><span onclick="dropdownFunction(event)" id="userRating">{{ratingItem.Rating}}</span>/10</button>
                <div id="myDropdown" class="dropdown-content">
                    <li>1</li>
                    <li>2</li>
                    <li>3</li>
                    <li>4</li>
                    <li>5</li>
                    <li>6</li>
                    <li>7</li>
                    <li>8</li>
                    <li>9</li>
                    <li>10</li>
                </div>
            </div>
        {{else}}
        <h3>YOUR RATING</h3>
        <div class="dropdown">
            <button onclick="dropdownFunction(event)" id="ratingButton" class="dropbtn"><img src="starOutline.png" alt=""><span id="userRating"></span>Rate</button>
                <div id="myDropdown" class="dropdown-content">
                    <li>1</li>
                    <li>2</li>
                    <li>3</li>
                    <li>4</li>
                    <li>5</li>
                    <li>6</li>
                    <li>7</li>
                    <li>8</li>
                    <li>9</li>
                    <li>10</li>
                </div>
            </div>
        {{/if}}
    </div>
    <div class="ratingCon">
        <h3>RATINGS</h3>
        <h3 id="numberOfRatingsText">{{mediaItem.numberOfRatings}}</h3>
    </div>
    </div>
    <div class="mediaItemImgCon">
    <img id = "mediaItemImg" src="{{mediaItem.poster}}" alt="">
    <p class="description">{{mediaItem.plot}}</p>
    </div>
    <h2 class="star">Starring {{mediaItem.star}}</h1>
</div> 
<script>
ratingFunction()
    var socket = io();


socket.on('Rating updated', function(data) {
// Check if the updated rating is for the current media items
document.getElementById('userRating').textContent = data.newRating;
document.getElementById('AvgRatingText').textContent=data.newAvgRating;
document.getElementById('numberOfRatingsText').textContent=data.newNumberOfRatings;
});

socket.on('new rating added', function(data){
    var button = document.getElementById('ratingButton');
    button.innerHTML = '<img onclick="dropdownFunction(event)" src="star.png" alt=""><span onclick="dropdownFunction(event)" id="userRating">' + data.newRating + '</span>/10';
});

</script>
</body>
</html>